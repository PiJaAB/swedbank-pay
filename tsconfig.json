{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": false,
    "strict": true,
    "target": "es2020",
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
  },
  "compileOnSave": true,
  "include": [
    "src",
    "types/*.d.ts", "src/LiveEntities/.ts", "index.ts",
  ]
}
